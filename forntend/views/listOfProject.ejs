<div class="cartcontianer">
    <% if(project.length !=0) {%>
        <% for(let i= 0; i < project.length; i++) {%>
            <div class="card" style="width: 40%;">
                <h5 class="card-header">Project Name:<%= project[i].name%></h5>
                <div class="card-body">
                  <h5 class="card-title">Description: <%= project[i].desc%></h5>
                  <p class="card-text">Author: <%= project[i].author%></p>
                  
                </div>
                <div style="display: flex; flex-direction: row-reverse;">
                    <form class="d-flex" action="/route/bug/<%= project[i].id%>" method="get">
            
                        <button class="btn btn-outline-success" type="submit">Report Issue</button>
                    </form>
                </div>
              </div>
        <%}%>
    <%}else{%>
        <div class="card" style="width: 18rem;">
            <div class="modal-header">
                <h5 class="modal-title">There is no project...</h5>
                <a href='/'  class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
              </div>
          </div>
    <%}%>
</div>